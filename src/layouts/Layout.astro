---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Revolutionary interactive dashboards for meetings, events, and dynamic displays. Transform your data into engaging visual experiences." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Meta tags -->
    <meta name="author" content="BeeOps" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Revolutionary interactive dashboards for meetings, events, and dynamic displays. Transform your data into engaging visual experiences." />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@BeeOps" />
    
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap">
    
    <!-- IMPORTANT: DO NOT REMOVE THIS SCRIPT TAG OR THIS VERY COMMENT!
    <script src="https://cdn.gpteng.co/gptengineer.js" type="module"></script> -->
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Custom hexagon pattern */
  .hexagon-pattern {
    background-image: 
      linear-gradient(30deg, #FFC72C0A 12%, transparent 12.5%, transparent 87%, #FFC72C0A 87.5%, #FFC72C0A),
      linear-gradient(150deg, #FFC72C0A 12%, transparent 12.5%, transparent 87%, #FFC72C0A 87.5%, #FFC72C0A),
      linear-gradient(30deg, #FFC72C0A 12%, transparent 12.5%, transparent 87%, #FFC72C0A 87.5%, #FFC72C0A),
      linear-gradient(150deg, #FFC72C0A 12%, transparent 12.5%, transparent 87%, #FFC72C0A 87.5%, #FFC72C0A);
    background-size: 60px 35px;
    background-position: 0 0, 0 0, 30px 15px, 30px 15px;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  ::-webkit-scrollbar-thumb {
    background: #FFC72C;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #E6B329;
  }
</style>